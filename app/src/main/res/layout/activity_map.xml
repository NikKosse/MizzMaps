<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

xmlns:tools="http://schemas.android.com/tools"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
tools:context=".MainActivity">


<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="200dp"
    android:layout_alignParentBottom="true"
    android:background="#1c1c1c"
    android:id="@+id/relativeLayout">


    <Spinner
        android:id="@+id/spinnerRooms"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:minHeight="25dp"
        android:layout_alignTop="@+id/spinnerFloor"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false" />

    <Spinner
        android:id="@+id/spinnerFloor"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:minHeight="48dp"
        android:dropDownHeight="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Floor"
        android:id="@+id/textView3"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="49dp"
        android:layout_marginStart="49dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Rooms"
        android:id="@+id/textView4"
        android:textColor="#ffffff"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp"
        android:layout_above="@+id/spinnerRooms"
        android:layout_alignRight="@+id/spinnerRooms"
        android:layout_alignEnd="@+id/spinnerRooms" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Location"
        android:id="@+id/btnChange"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="          "
        android:id="@+id/txtLocation"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#0FBEE3" />

</RelativeLayout>

    <com.example.derek.teamb.PinView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_above="@+id/relativeLayout" >

    </com.example.derek.teamb.PinView>

</RelativeLayout>
